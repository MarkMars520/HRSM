
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

<script type="text/javascript">
    $(function () {
        //导航切换
        $(".menuson li.active").removeClass("active");
        $("#dictItem").addClass("active");

        $("#btnBack").click(function () {
            window.location = "/dict/Index";
        });

        $("#btnDelete").click(function () {//显示警告对话框
            $(".tip").fadeIn(200);
        });
        $(".tiptop a").click(function () {//关闭对话框
            $(".tip").fadeOut(200);
        });
        $(".sure").click(function () {//点击对话框上确定按钮提交请求
            $(".tip").fadeOut(100);
        });

        $(".cancel").click(function () {
            $(".tip").fadeOut(100);//点击对话框上的取消按钮隐藏对话框
        });
    });
</script>
<div class="place">
    <span>位置：</span>
    <ul class="placeul">
        <li><a href="#">首页</a></li>
        <li><a href="#">系统字典</a></li>
        <li><a href="#"> 删除字典</a></li>
    </ul>
</div>
<form method="post">
    <div class="formbody">
        <div class="formtitle"><span>基本信息</span></div>
        <input type="hidden" name="ID" value="@ViewBag.Dict.ID" /><!--隐藏字典主键ID值-->
        <ul class="forminfo">
            <li><label>代码类型名</label><input name="TypeName" type="text" class="dfinput" value="@ViewBag.Dict.TypeName" disabled="disabled" /></li>
            <li><label>代码名</label><input name="Name" type="text" class="dfinput" value="@ViewBag.Dict.Name" disabled="disabled" /></li>
            <li><label>代码值</label><input name="Value" type="text" class="dfinput" value="@ViewBag.Dict.Value" disabled="disabled" /></li>
            <li><label>顺序</label><input name="Sort" type="text" class="dfinput" value="@ViewBag.Dict.Sort" disabled="disabled" /></li>
            <li>
                <label>&nbsp;</label><input id="btnDelete" name="btnDelete" type="button" class="btn" value="删除" />
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<input id="btnBack" name="btnBack" type="button" class="btn" value="取消并返回" />
            </li>
        </ul>
    </div>
    <div class="tip">
        <div class="tiptop"><span>提示信息</span><a></a></div>

        <div class="tipinfo">
            <span><img src="~/images/ticon.png" /></span>
            <div class="tipright">
                <p>是否确认对信息的删除 ？</p>
                <cite>如果是请点击确定按钮 ，否则请点取消。</cite>
            </div>
        </div>

        <div class="tipbtn">
            <input name="" type="submit" class="sure" value="确定" />&nbsp;
            <input name="" type="button" class="cancel" value="取消" />
        </div>
    </div>
</form>


